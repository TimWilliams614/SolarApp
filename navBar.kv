<NavBar>:
	Widget:
		#navbar backgroumd
		canvas: 
			Color:
				rgba:1,1,1,1
			Rectangle:
				size:255,480
				pos:545,0

		#locker button
		ToggleButton:
			id: locker
			size:255,80
			pos:545,380
			background_color:(0,0.2890625,0.484375,1.0)
			background_normal:''
			group: 'mainmenu'
			text: 'LOCKERS'
			on_press: app.manager.current = root.lockPress(app.manager.current)

		#about button
		ToggleButton:
			id: about
			size:255,80
			pos:545,290
			background_color:(0,0.2890625,0.484375,1.0)
			background_normal:''
			group: 'mainmenu'
			text: 'ABOUT'
			on_press: app.manager.current = root.aboutPress(app.manager.current)

		#about button
		Image:
			size:226.308, 230
			pos:558,16
			source: 'images/pic.png'
			allow_stretch: True
			keep_ratio: True