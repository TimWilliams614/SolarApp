<LockerAccessScreen>

	id:locker_screen

	canvas:
    	Color:
    		rgba:.2905,.6843,.851,1
		Rectangle:#background
			size:root.width,root.height
			pos:0,0
		Color:
			rgba:1,1,1,1
		Rectangle: # locker list rect
			size:248,437
			pos:16,18
		Rectangle: #locker info rect
			size:248,200
			pos:276,255
		Rectangle: # 'How to use' rect
			size:248,225
			pos:276,18

	Widget:
		id: main_widget
		Label:#User number data
			text:'CatID:'
			pos:-10,415
			color:1,1,1,1
			
		Label:#User number data
			id: labelUser
			text:'N/A'
			pos:30,415
			color:1,1,1,1

		Label:#clock
			id:clockTime
			text:""
			pos:435,415
			color:1,1,1,1

		Label:#locker list header
			text:'Locker List'
			pos:90,380
			font_size:22
			color:0,0,0,1

		#:set startX 32
		#:set startX2 148
		#:set startY 290
		#:set increment 125
		#:set lockerID_fontSize 45

		#-- first locker row-- #
		ToggleButton: #locker 1
			id: locker1
			size:213,110
			pos:startX,startY
			group:'lockerList'
			background_normal:''
			background_down:'assets/grey.png'
			text:'1'
			font_size:lockerID_fontSize
			background_color:root.backgroundState(int(self.text)-1)
			on_press:root.lockerClick(self, int(self.text)-1)

		
		ToggleButton: #locker 2
			id: locker2
			size:213,110
			pos:startX,startY-increment
			group:'lockerList'
			background_normal:''
			background_down:'assets/grey.png'
			text:'2'
			font_size:lockerID_fontSize
			background_color:root.backgroundState(int(self.text)-1)
			on_press:root.lockerClick(self, int(self.text)-1)

		ToggleButton: #locker 3
			id: locker3
			size:213,110
			pos:startX,startY-increment*2
			group:'lockerList'
			background_normal:''
			background_down:'assets/grey.png'
			text:'3'
			font_size:lockerID_fontSize
			background_color:root.backgroundState(int(self.text)-1)
			on_press:root.lockerClick(self, int(self.text)-1)

		Label: #Loocker data Header
			text:'Locker Data'
			pos:344,380
			font_size:22
			color:0,0,0,1

		Label: # Locker Info Header
			text: 'Locker: '
			pos:310,345
			font_size:20
			color:0,0,0,.85

		Label:#locker number data
			id: labelName
			text:'N/A'
			pos:385,343
			color:0,0,0,.66
			font_size:18

		Label: #status header
			text: 'Status:'
			pos:305,312
			font_size:20
			color:0,0,0,.85

		Label: #status data
			id:labelStatus
			text:'N/A'
			pos:385,312
			font_size:18
			color:0,0,0,0.66
		
		Label:
			text: 'Since: '
			pos:302,280
			font_size:20
			color:0,0,0,.85

		Label: #since data
			id:labelTime
			text: 'N/A'
			pos: 385,278
			font_size:18
			color:0,0,0,0.66

		Label: #Locker Usage Header
			text:'Locker Usage'
			pos:403,173
			text_size:230,None
			font_size:20
			color:0,0,0,1

		Label: #Locker Usage Header
			text:'Select lockers by clicking on them.\nClick action button above to perform desired action to selected locker.'
			pos:360,135
			text_size:230,None
			font_size:13
			color:0,0,0,1
			
		Image:
			size:160, 60
			pos:282,95
			source: 'assets/legend.png'
			allow_stretch: True
			keep_ratio: True

		Button:
			id: action_button
			size:150,50
			pos:325,264
			background_color:[0.0,0.0,0.0,0.8]
			background_normal:''
			text:'Choose a Locker'
			on_press:root.actionClick()

		Button:
			id: logout_button
			size:154,50
			pos:325,40
			background_color:(0.9,0.4,0.4,1.0)
			background_normal:''
			text:'Log Out'
			on_press:root.logOut()

