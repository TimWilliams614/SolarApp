<LockerScreen>:
    canvas:
    	Color:
    		rgba:.2905,.6843,.851,1
		Rectangle:#background
			size:root.width,root.height
			pos:0,0
		Color:
			rgba:1,1,1,1
		Rectangle:
			size:515,133
			pos:16,312
		Rectangle:
			size:254,123
			pos:17,183
		Rectangle:
			size:254,123
			pos:276,183
	Widget:
		Label:#clock
			id:clockTime
			text:""
			pos:440,405
			color:1,1,1,1

		Label: #Locker Header
			text:'Locker Information'
			color:0,0,0,.66
			pos:222,371
			font_size:24
		Label: #Locker Information
			text:'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse in purus vitae lacus lobortis hendrerit ac sit amet diam. Praesent interdum pellentesque nulla at luctus. Nullam molestie risus nulla, a tincidunt magna rutrum vitae. Pellentesque habitant morbi tristique senectus et netus et malesuada fames ac turpis egestas. Proin aliquet non est ac pulvinar. '
			color:0,0,0,.83
			font_size:13
			line_height:1.1
			text_size:440,None
			pos:218,309
		Label:#Available Header
			text:'AVAILABLE'
			pos:97,220
			font_size:14
			color:0,0,0,.66
		Label:#Available Data
			id:available_locker
			text:root.availableCount()
			font_size:34
			pos:95,190
			color:.2,.9,.2,.83

		Label:#Used
			text:'IN USE'
			color:0,0,0,.66
			pos:345,220
			font_size:14

		Label:#Used Data
			id:unavailable_locker
			text:root.unavailableCount()
			font_size:34
			pos:345,190
			color:0.9,0.1,0.1,.83

		TextInput:
			id:text_userID
			size:144,30
			pos:200,135
			multiline: False
			text: ""
			focus: False
			on_focus: self.select_all()
			on_parent: self.focus = True

		Button:
			id:login_button
			size:334,90
			pos:105,25
			background_color:(0,0.2890625,0.484375,1.0)
			background_normal:''
			group: 'LockerScreen'
			text: 'ACCESS LOCKERS'
			font_size: 18
			on_press:root.clickLogin(text_userID.text)

		Label: #display error
			size:144,10
			pos:200,10
			font_size:10
			color:1,0,0,1
			text:root.checkLogin(text_userID.text)